<Page x:Class="Library.AccauntPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccauntPage">
    <Grid Background="WhiteSmoke">
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="31"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Margin="0,5" Content="Name: " VerticalContentAlignment="Center"/>
                    <Label Grid.Row="0"  x:Name="txtLogin" Content="{Binding Accaunt.Person.Name}" Margin="35,1,1,1" Height="35" Width="300" VerticalContentAlignment="Center"/>
                    <Label Grid.Row="1"  Margin="0,5" Content="Surname: " VerticalContentAlignment="Center"/>
                    <Label Grid.Row="1"  x:Name="txtSurname" Content="{Binding Accaunt.Person.Surname}" Margin="35,1,1,1" Height="35" Width="300" VerticalContentAlignment="Center"/>
                    <Label Grid.Row="2"  Margin="0,5" Content="Birthday: " VerticalContentAlignment="Center"/>
                    <Label Grid.Row="2"  x:Name="txtBirthday" Content="{Binding Accaunt.Person.Birthday}" Margin="35,1,1,1" Height="35" Width="300" VerticalContentAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="1" Grid.RowSpan="2" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Row="0" Grid.Column="0" Content="Logout" Margin="11, 35, 11 ,35" x:Name="buttonLogout"/>
                    <Button Grid.Row="0" Grid.Column="1" Content="Return Book" Margin="11, 35, 11 ,35" x:Name="buttonReturnBook"/>
                    <Button Grid.Row="1" Grid.Column="0" Content="Get book" Margin="11, 35, 11 ,35" x:Name="buttonGetBook"/>
                    <Button Grid.Row="1" Grid.Column="1" Content="Spoil book" Margin="11, 35, 11 ,35" x:Name="buttonSpoilBook"/>
                </Grid>

                <Label Grid.Row="0" Grid.Column="1" Content="Debt books:"/>
                <DataGrid ItemsSource="{Binding Accaunt.Person.BookDebt}" SelectedItem="{Binding SelectedBookDebt}" Margin="1,30,5,5" Grid.Row="0" Grid.Column="1" x:Name="listDebtBooks" >
                </DataGrid>
                <Label Grid.Row="1" Grid.Column="1" Content="Taken books:"/>
                <DataGrid ItemsSource="{Binding Accaunt.Person.TakenBook}" SelectedItem="{Binding SelectedTakenBook}" Margin="1,30,5,5" Grid.Row="1" Grid.Column="1" x:Name="listTakenBooks">
                </DataGrid>
                <Label Grid.Row="2" Grid.Column="1" Content="Available books:"/>
                <DataGrid ItemsSource="{Binding AvailableBooks}" SelectedItem="{Binding SelectedAvailableBook}" Margin="1,30,5,5" Grid.Row="2" Grid.Column="1" x:Name="listAvailableBooks">
                </DataGrid>
            </Grid>
        </ScrollViewer>
        <Label Grid.Row="3" Grid.RowSpan="1"  Content="{Binding AlertMessage}" FontWeight="Bold" Foreground="Brown" FontSize="15" />
    </Grid>
</Page>
